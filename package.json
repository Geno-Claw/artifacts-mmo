{
  "name": "artifacts-mmo",
  "version": "0.1.0",
  "description": "Geno-Claw's Artifacts MMO bot - API-driven MMO gameplay",
  "type": "module",
  "scripts": {
    "start": "node src/bot.mjs",
    "dev": "BOT_CONFIG=./config/characters-local.json node src/bot.mjs",
    "status": "node src/status.mjs",
    "test:skill-rotation": "node scripts/test-skill-rotation.mjs",
    "test:ui-state": "node scripts/test-ui-state.mjs",
    "test:dashboard-server": "node scripts/test-dashboard-server.mjs",
    "test:config-store": "node scripts/test-config-store.mjs",
    "test:runtime-manager": "node scripts/test-runtime-manager.mjs",
    "test:account-cache": "node scripts/test-account-cache.mjs",
    "test:phase3": "node scripts/test-account-cache.mjs && node scripts/test-dashboard-server.mjs",
    "test:phase4": "node scripts/test-dashboard-server.mjs && node scripts/test-config-store.mjs",
    "test:phase5": "node scripts/test-runtime-manager.mjs && node scripts/test-dashboard-server.mjs",
    "test:inventory-manager": "node scripts/test-inventory-manager.mjs",
    "test:bank-ops": "node scripts/test-bank-ops.mjs",
    "test:order-board": "node scripts/test-order-board.mjs",
    "test:no-direct-bank-api": "node scripts/test-no-direct-bank-api.mjs",
    "test:potions": "node scripts/test-potion-manager.mjs",
    "test:bank-travel": "node scripts/test-bank-travel-potions.mjs",
    "test:all": "node scripts/test-inventory-manager.mjs && node scripts/test-bank-ops.mjs && node scripts/test-order-board.mjs && node scripts/test-no-direct-bank-api.mjs && node scripts/test-skill-rotation.mjs && node scripts/test-potion-manager.mjs && node scripts/test-bank-travel-potions.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "puppeteer-core": "^24.37.3"
  }
}
